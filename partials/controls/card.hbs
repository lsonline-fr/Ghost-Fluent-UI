<div class="list-cell ms-Grid-col ms-sm12 ms-lg6 ms-xl4 ms-xxl3" role="presentation">
    <div>
        <div class="item-cardTile" role="listitem">
            <div class="itemCardPreview">
                <a href="{{url}}" title="{{title}}">
                    {{#if feature_image}}
                    <img src="{{img_url feature_image}}" role="presentation" alt="" class="ms-fadeIn400" />
                    {{/if}}
                </a>
            </div>
            <div class="itemCardInfo">
                <div class="itemCardTile-titleArea">
                    {{#if primary_tag}}
                    <a class="itemCardTag-primary" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                    {{/if}}
                    <a href="{{url}}" title="{{title}}">
                        <div class="itemCardTitle">{{title}}</div>
                    </a>
                </div>
                <div class="itemCardTile-excerpt ms-hiddenSm ms-hiddenMd">
                    {{excerpt}}
                </div>
                <div class="itemCardActivity">
                    <div class="itemCardActivity-authors">
                        {{> "controls/facepile"}}
                    </div>
                    <div class="itemCardActivity-details">
                        <span class="itemCardActivity-date">
                            <time datetime="{{date}}">{{date published_at timeago="true"}}</time>
                        </span>
                        <span class="itemCardActivity-readingTime">{{reading_time}}</span>
                    </div>
                    <div class="itemCardActivity-tags">
                        {{#has tag="#event"}}
                        <span role="presentation" class="ms-Icon ms-Icon--Event" aria-label="This post is an event" title="This post is an event"></span>
                        {{/has}}
                        {{#if featured}}
                        <span role="presentation" class="ms-Icon ms-Icon--SingleBookmarkSolid" aria-label="Featured" title="Featured"></span>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>